   <form action=" " method="POST" enctype="multipart/form-data">
      <div class="year">
            <label for="">Select image</label>
            <input type="file" name="image" id="myImg" accept="image/*">
      </div> 

          <div class="year">
            <label for="class-year">News title:</label>
            <input id="class-year"  class="form-control" name="title" type="text" value="{{data_news.news_title}}" required>
          </div>

           <div>
              <img  src="" id="blah" style="width: 100%;">
            </div>

           <div class="bio-field">
              <label for="bio">Your News:</label>
              <textarea name="news"  class="form-control" id="" placeholder="Write something here....." required >{{data_news.news_body}}</textarea>
          </div>
     
      <button id="cancel-btn" class="btn btn-info btn-lg">Cancel</button>
      <button id="save-btn" type="submit" class="btn btn-info btn-lg">Update</button>
   </form> 
</div>

<script>
   window.addEventListener('load', function() {
    document.querySelector('input[type="file"]').addEventListener('change', function() {
        if (this.files && this.files[0]) {
          var img = document.querySelector('img');  // $('img')[0]
          img.src = URL.createObjectURL(this.files[0]); // set src to blob url
          img.onload = imageIsLoaded;
        }
    });
});
 </script>
 

 