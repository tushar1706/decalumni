 <div class="container">
  <div class="row">
   <!-- Left pannel  -->
   <div class="col-sm-3">
    <div class="left-panel">
     <a href="http://localhost:3000/profile" id="personalInfo-btn" class="btn btn-info btn-lg">All Information</a>
      <a href="http://localhost:3000/personalinfo" id="personalInfo-btn" class="btn btn-info btn-lg" style="background-color: #095f94;color: white;">Personal Information</a>
     <a href="http://localhost:3000/jobinfo" id="jobInfo-btn"  class="btn btn-info btn-lg">Job Information</a>
     <a href ="http://localhost:3000/privacy" id="privacy-btn" class="btn btn-info btn-lg">Privacy Setting</a>
    </div>
   </div>
   <!-- Right panel-->
   <div class="col-sm-9">
    <div class="info-form">
     <form action="propic_update" method="POST" enctype="multipart/form-data">
        <div class="signin-form">
          <label for="name">Profile picture:</label>
          <input type="file" name="propic" accept="image/*" required>
          <button id="save-btn" type="submit" class="btn btn-info btn-lg">Change Profile pic</button>
        </div>
      </form>

     <form action="" id="usrform" method="POST">
        <div><p class="success-alert">{{message}}</p></div>
       <div class="heading">Personal information</div>
      <div class="name-filed">
        <label for="name">Your Name:</label>
       <input type="text" name="name" class="post-input-field" placeholder="Your Name" id="name" value="{{personalinfo.name}}" required>
      </div>
      <div class="bio-field">
        <label for="bio">Bio:</label>
        <textarea name="bio" id="bio" form="usrform" placeholder="Enter text here...">{{personalinfo.bio}}</textarea>
      </div>
      
      <div id="date-of-birth">
       <label for="dob">Date Of Birth:</label>
       <input type="date" name="dob"  id="dob" value="{{personalinfo.dob}}" required />
      </div>
     
      <div class="branch-field ">
       <label for="branchId">Branch:</label>
       <select class="post-input-field" name="branch" id="branchId" required>
        <option value="{{personalinfo.branch_code}}">{{branch.branch_name}}</option>
        <option value="1">Civil Engineering</option>
        <option value="2">Computer Science & Engineering</option>
        <option value="3">Electrical Enginnering</option>
        <option value="4">Electrical & Electronics Enginnering</option>
       <option value="5">Mechanical Enginnering</option>
       </select>
      </div>
      <div class="year">
       <label for="class-year">Class Year:</label>
       <select name="class_year" id="class-year" required>
        <option value="{{personalinfo.class_yr}}">{{personalinfo.class_yr}}</option>
        <option value="2014">2014</option>
        <option value="2015">2015</option>
        <option value="2016">2016</option>
        <option value="2017">2017</option>
       </select>
      </div>
      <button id="cancel-btn" class="btn btn-info btn-lg">Cancel</button>
      <button id="save-btn" type="submit" class="btn btn-info btn-lg">Update</button>
     </form>
    </div>
   </div>
  </div>
 </div>

 