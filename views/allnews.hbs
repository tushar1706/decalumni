         {{#each data_news}}
        <div class="col-9">
            <div class="news-card">
                <div class="row">
                    <div class="col-4">
                        <div class="news-img">
                            <img src="/images/{{this.pic_path}}" alt="Seminar">
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="headline">
                            <h4><a href="http://localhost:3000/view_news/{{this.news_id}}">{{this.news_title}}</a></h4>
                        </div>
                        <div class="postDate">
                            <p><b>Posted on : {{this.det}}</b></p>
                        </div>
                        <div class="newsVia">
                            <p>News via ~ <span class="newsSource">College News</span></p>
                        </div>
                        <div class="newsSummary">
                            <p>{{this.news_body}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         {{/each}}
    </div>
